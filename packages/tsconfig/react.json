{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "noEmit": false,
    "outDir": "dist",
    "types": ["jest", "node"]
  },
  "include": ["src", "tests", "*.ts", "*.tsx"],
  "exclude": ["node_modules", "dist", "build"]
}
