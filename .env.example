# Root-level environment variables for InFocus monorepo
# Copy this file to .env and fill in the values

# Database (API)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/infocus_dev"

# JWT secrets (API) - replace with secure random strings in production
JWT_ACCESS_SECRET="your-jwt-access-secret-key-change-in-production"
JWT_REFRESH_SECRET="your-jwt-refresh-secret-key-change-in-production"

# TMDB API key - get from https://www.themoviedb.org/settings/api
TMDB_API_KEY="your-tmdb-api-key-here"

# API configuration
PORT=3000
NODE_ENV="development"

# Web app configuration
VITE_API_URL="http://localhost:3000"
VITE_TMDB_IMAGE_BASE_URL="https://image.tmdb.org/t/p"

# Mobile app configuration
API_URL="http://localhost:3000"
BUNDLE_IDENTIFIER="com.infocus.mobile"
